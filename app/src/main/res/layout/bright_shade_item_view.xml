<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/brightShadeItemViewLayout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:padding="@dimen/contrast_item_margin"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/contrastLeftImage"
        android:layout_width="@dimen/contrast_item_width"
        android:layout_height="@dimen/contrast_item_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:scaleType="fitCenter" />

    <ImageView
        android:id="@+id/contrastRightImage"
        android:layout_width="@dimen/contrast_item_width"
        android:layout_height="@dimen/contrast_item_height"
        android:background="@color/black"
        android:gravity="center_vertical"
        android:scaleType="fitCenter" />

</LinearLayout>