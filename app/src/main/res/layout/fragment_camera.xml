<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentRelative"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 애드몹 광고   -->
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/bannerAdView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/pinchZoomLinearLayout"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>

    <ImageView
        android:id="@+id/bannerVersaAD"
        android:layout_width="wrap_content"
        android:scaleType="fitCenter"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/pinchZoomLinearLayout" />

    <com.overflow.flowy.View.FlowyGLTextureView
        android:id="@+id/glSurfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/blackScreen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/pinchZoomLinearLayout"
        android:layout_below="@+id/topMenuLayout"
        android:background="@color/black"
        android:visibility="invisible"
        tools:ignore="NotSibling" />

    <FrameLayout
        android:visibility="invisible"
        android:id="@+id/shareFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/menu_bar_top">

        <ImageButton
            android:id="@+id/shareImgBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/share" />

    </FrameLayout>


    <!-- 상단 메뉴바 -->
    <LinearLayout
        android:id="@+id/topMenuLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/menu_bar_top"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="1"
        tools:ignore="NotSibling">

        <!-- 구현되면 bg 수정해야함 -->
        <ToggleButton
            android:id="@+id/focusToggleBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="0.20"
            android:background="@drawable/focus_menu_on_off"
            android:textOff="@string/textClear"
            android:textOn="@string/textClear" />

        <ToggleButton
            android:id="@+id/flashToggleBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="0.20"
            android:background="@drawable/flash_menu_on_off"
            android:textOff="@string/textClear"
            android:textOn="@string/textClear" />

        <ToggleButton
            android:id="@+id/lensChangeToggleBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="0.20"
            android:background="@drawable/lens_change_menu_on_off"
            android:textOff="@string/textClear"
            android:textOn="@string/textClear" />

        <ToggleButton
            android:id="@+id/flowyZoomToggleBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="0.20"
            android:background="@drawable/flowy_zoom_menu_on_off"
            android:textOff="@string/textClear"
            android:textOn="@string/textClear" />

        <!-- 구현되면 bg 수정해야함 -->
        <ToggleButton
            android:id="@+id/mirroringToggleBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="0.20"
            android:background="@drawable/mirroring_menu_on_off"
            android:textOff="@string/textClear"
            android:textOn="@string/textClear" />

    </LinearLayout>

    <!-- 하단 메뉴바   -->
    <LinearLayout
        android:id="@+id/bottomMenuLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/menu_bar_bottom"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="1">

        <ToggleButton
            android:id="@+id/menuToggleBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="0.20"
            android:background="@drawable/menu_on_off"
            android:textOff="@string/textClear"
            android:textOn="@string/textClear" />

        <ToggleButton
            android:id="@+id/flowyCastToggleBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="0.20"
            android:background="@drawable/flowy_cast_menu_on_off"
            android:textOff="@string/textClear"
            android:textOn="@string/textClear" />

        <!-- 구현되면 bg 수정해야함 -->
        <ToggleButton
            android:id="@+id/freezeToggleBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="0.20"
            android:background="@drawable/freeze_menu_on_off"
            android:textOff="@string/textClear"
            android:textOn="@string/textClear" />

        <ToggleButton
            android:id="@+id/luminanceToggleBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="0.20"
            android:background="@drawable/contrast_menu_on_off"
            android:textOff="@string/textClear"
            android:textOn="@string/textClear" />

        <!-- 구현되면 bg 수정해야함 -->
        <ToggleButton
            android:id="@+id/controlToggleBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="0.20"
            android:background="@drawable/control_menu_on_off"
            android:textOff="@string/textClear"
            android:textOn="@string/textClear" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pinchZoomLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/bottomMenuLayout"
        android:background="@drawable/pinchzoom_control_bar"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:weightSum="1">

        <ImageButton
            android:id="@+id/pinchZoomMinusImgBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/pinchzoom_minus" />

        <SeekBar
            android:id="@+id/pinchZoomSeekbar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:max="100"
            android:maxHeight="10dp"
            android:progress="0"
            android:progressDrawable="@drawable/seekbar_custom_style"
            android:thumb="@drawable/seekbar_thumb_style" />

        <ImageButton
            android:id="@+id/pinchZoomPlusImgBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/pinchzoom_plus" />

    </LinearLayout>


</RelativeLayout>
